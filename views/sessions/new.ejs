<div class="container">

<form method="POST" action="/login" id="validate">
<div class="field">

    <label for="email">Email Adress</label>
      <p class="control has-icons-left">
    <input type="email" name="email" id="email" required class="input" placeholder="Email">
    <span class="icon is-small is-left">
      <i class="fa fa-envelope"></i>
    </span>
  </p>
</div>
<div class="field">

      <label for="password">Password</label>
      <p class="control has-icons-left">
    <input type="password" name="password" id="password" required class="input"placeholder="Password">
    <span class="icon is-small is-left">
      <i class="fa fa-lock"></i>
    </span>
  </p>
</div>
<div class="field">
  <p class="control">
    <button class="button is-success">
      Login
    </button>
  </p>
</div>
</form>
</div>
