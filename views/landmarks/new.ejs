<div class="container">
<h1 class="title is-1">Make a New Post</h1>
<div class="box upload-content">
  <div class="content">
    <output id="list"></output>
  </div>

</div>


<form method="POST" action="/landmarks" id="validate" enctype="multipart/form-data">

  <div>

    <div class="field">
        <label class="label" for="image"></label>
        <label class="button is-primary" for="image" id="file">Choose file</label>
        <input type="file" name="image" id="image" hidden>
        <output id="list"></output>
      </div>

    <%# Update the lat, lng and description with the values returned from the API using jQuery%>
    <input type="hidden" name="lat" id="lat">
    <input type="hidden" name="lng" id="lng">
    <input type="hidden" name="title" id="title">
  </div>

  <%# When the user chooses an image, at that point it goes to the API, then when the response comes back, update the span below with the location%>

        <div>
          <label for="caption">Caption</label>
          <input type="text" name="caption" id="caption" required>
        </div>
  <span class="description"><span>
    <button class="button is-success inputDisabled" disabled>Create Post</button>
  </form>
</div>
